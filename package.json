{
  "name": "@douglance/http",
  "version": "0.1.0",
  "description": "Simple, AI-friendly HTTP client for .http/.rest files. No bloat, just requests with JSON output.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "http": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "examples"
  ],
  "scripts": {
    "dev": "tsc && node dist/cli.js",
    "build": "tsc",
    "build:exe": "npm run build && bun build --compile --minify --sourcemap ./dist/cli.js --outfile http",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "npm run build"
  },
  "keywords": [
    "http",
    "rest",
    "api",
    "client",
    "http-client",
    "rest-client",
    "cli",
    "ai",
    "llm",
    "automation",
    "simple",
    "json",
    "terminal",
    "postman",
    "insomnia"
  ],
  "author": "Doug Lance",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/douglance/http-cli.git"
  },
  "homepage": "https://github.com/douglance/http-cli#readme",
  "bugs": {
    "url": "https://github.com/douglance/http-cli/issues"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.0",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^7.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
